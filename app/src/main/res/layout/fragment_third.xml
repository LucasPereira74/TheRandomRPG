<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49627A"
    tools:context=".ThirdFragment">

    <Button
        android:id="@+id/button_second3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#49627A"
        android:fontFamily="@font/aguafina_script"
        android:text="@string/previous"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="#F73B688C"
        android:fontFamily="@font/aclonica"
        android:text="@string/Armor_choice"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mag" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:background="#F73B688C"
        android:fontFamily="@font/aclonica"
        android:text="@string/Weapon_choice"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Imageview_personnage" />

    <TextView
        android:id="@+id/textview_first3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#4571A6"
        android:fontFamily="sans-serif-black"
        android:text="@string/hello_first_fragment"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/att"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/ATT"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/Imageview_personnage"
        app:layout_constraintTop_toBottomOf="@+id/textview_first3" />

    <TextView
        android:id="@+id/def"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/DEF"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/def_value"
        app:layout_constraintTop_toBottomOf="@+id/att" />

    <TextView
        android:id="@+id/agi"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/AGI"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/agi_value"
        app:layout_constraintTop_toBottomOf="@+id/def" />

    <TextView
        android:id="@+id/mag"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/MAG"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/mag_value"
        app:layout_constraintTop_toBottomOf="@+id/agi" />

    <TextView
        android:id="@+id/att_value"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/ATT_Value"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first3" />

    <TextView
        android:id="@+id/def_value"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/DEF_Value"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/att_value" />

    <TextView
        android:id="@+id/agi_value"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/AGI_Value"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/def_value" />

    <TextView
        android:id="@+id/mag_value"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/MAG_Value"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agi_value" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="205dp"
        android:layout_height="365dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_armor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/Imageview_personnage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintEnd_toStartOf="@+id/def"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ButtonSword"
        android:layout_width="206dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/sword_button"
        android:fontFamily="@font/aclonica"
        android:text="SWORD"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <Button
        android:id="@+id/buttonStick"
        android:layout_width="206dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/stick_button"
        android:fontFamily="@font/aclonica"
        android:text="Stick"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/ButtonSword" />

    <Button
        android:id="@+id/buttonDagger"
        android:layout_width="206dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/dagger_button"
        android:fontFamily="@font/aclonica"
        android:text="Dagger"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonStick" />


</androidx.constraintlayout.widget.ConstraintLayout>